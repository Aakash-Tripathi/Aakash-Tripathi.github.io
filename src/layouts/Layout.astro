---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  author?: string;
  type?: string;
  keywords?: string;
}

const {
  title,
  description = "Aakash Tripathi's research portfolio showcasing education, publications, and research in multimodal medical AI and deep learning for oncology.",
  image = "https://aakash-tripathi.github.io/assets/profile-photo.jpg",
  author = "Aakash Tripathi",
  type = "website",
  keywords = "Aakash Tripathi, medical AI, multimodal AI, deep learning, oncology, cancer research, computational pathology, precision medicine, multi-omics, machine learning, HONeYBEE, SeNMo, CLEVER, EAGLE, Moffitt Cancer Center, digital pathology, clinical NLP, foundation models, transformers, graph neural networks"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteUrl = "https://aakash-tripathi.github.io";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Aakash Tripathi - Research Portfolio" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    <meta name="google-site-verification" content="google4f18f8eacc8abdf9" />
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>