---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="header">
  <div class="container">
    <h1>{title}</h1>
    {subtitle && <p class="subtitle">{subtitle}</p>}
  </div>
</header>

<style>
  .header {
    background-color: var(--color-secondary);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  h1 {
    margin-bottom: 0.5rem;
    font-size: 2.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    opacity: 0.8;
  }
</style>