---
import { workExperience, teachingExperience } from "../data/experience";
---

<section class="experience">
  <h2>üíº Work Experience</h2>
  <table>
    <thead>
      <tr>
        <th>Position</th>
        <th>Organization</th>
        <th>Dates</th>
      </tr>
    </thead>
    <tbody>
      {workExperience.map((item) => (
        <tr>
          <td><strong>{item.title}</strong></td>
          <td>{item.organization}</td>
          <td>
            {new Date(item.startDate).toLocaleDateString('en-US', { year: 'numeric', month: '2-digit' }).replace(/\//g, '.')} ‚Äì
            {item.present ? <em>Present</em> : new Date(item.endDate).toLocaleDateString('en-US', { year: 'numeric', month: '2-digit' }).replace(/\//g, '.')}
          </td>
        </tr>
      ))}
    </tbody>
  </table>

  <h2>üë®‚Äçüè´ Teaching Experience</h2>
  <div class="teaching-list">
    {teachingExperience.map((item) => (
      <div class="teaching-item">
        <p><strong>{item.title}</strong></p>
        <p>{item.workshop}</p>
        <p>{item.organization}, {item.location || item.date}</p>
        {item.url && (
          <p><a href={item.url} target="_blank" rel="noopener noreferrer">Workshop Details</a></p>
        )}
      </div>
    ))}
  </div>
</section>

<style>
  .teaching-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .teaching-item {
    border-left: 3px solid var(--accent-color, #3b82f6);
    padding-left: 1rem;
  }

  .teaching-item p {
    margin: 0.25rem 0;
  }

  .teaching-item a {
    color: var(--accent-color, #3b82f6);
    text-decoration: none;
  }

  .teaching-item a:hover {
    text-decoration: underline;
  }
</style>
