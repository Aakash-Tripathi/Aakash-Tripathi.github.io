---
import publications from '../data/publications.js';

---

<section>
  <h2>Publications</h2>
  <ul>
    {publications.map(pub => (
      <li>
        <strong>{pub.title}</strong> - {pub.journal} ({pub.year})  
        <br />
        <a href={pub.link} target="_blank" rel="noopener noreferrer">View Publication</a>
      </li>
    ))}
  </ul>
</section>