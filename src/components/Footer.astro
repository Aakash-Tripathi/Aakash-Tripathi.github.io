<style>
  .footer {
    background-color: var(--color-light);
    padding: 2rem 0;
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>